<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}FAQ Oclock{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Raleway:400,400i,600,700,800,900" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/style.css')}}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

        <header class="container d-flex justify-content-between">
            
            <a href="{{ path('homepage')}}"> <h1 class="container-title"> FAQ O'clock </h1></a>

            <div class="container-right ">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('app_logout')}}" class="header-button header-button-left ">Se d√©connecter</a>
                <a href="{{ path('profil_user', {'id': app.user.id } )}}" class="header-button ">Mon profil</a>
                    {% if is_granted('ROLE_KRYPTON_ADMIN') %}
                        <a href=" {{ path('admin_user_index') }} " class="header-button header-button-users">All Users</a>
                    {% endif %}
                {% else %}
                <a href="{{ path('add_user')}}" class="header-button header-button-left "><i class="fas fa-user-plus"></i> S'inscrire</a>
                <a href="{{ path('login')}}" class="header-button ">Se connecter</a>
                {% endif %}
                {% block nav %}{% endblock %}
            </div>
        </header>

        <div class="container">
            <main>
            {% block body %}{% endblock %}
            </main>
        </div>
        
        <footer>
            <div class="container">
                <p class="d-flex justify-content-center">FAQ-O-CLOCK by Thibault</p>
            </div>
        </footer>


        {% block javascripts %}{% endblock %}
    </body>
</html>
